{
  "type": "object",
  "properties": {
    "devicemeta": {
      "title": "Device meta data",
      "type": "object",
      "properties": {
        "display": {
          "title": "Meta data header in device folders",
          "type": "integer",
          "default": 1,
          "anyOf": [
            {
              "type": "integer",
              "title": "Disable meta header",
              "enum": [
                0
              ]
            },
            {
              "type": "integer",
              "title": "Enable meta header",
              "enum": [
                1
              ]
            }
          ]
        },
        "devices": {
          "title": "Devices",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "serialno": {
                "title": "serialno",
                "type": "string",
                "pattern": "^[a-fA-F0-9]{8}$",
                "minLength": 8,
                "maxLength": 8
              },
              "name": {
                "title": "Name",
                "type": "string",
                "pattern": "^.*$",
                "minLength": 0,
                "maxLength": 16
              },
              "group": {
                "title": "Group",
                "type": "string",
                "pattern": "^.*$",
                "minLength": 0,
                "maxLength": 16
              },
              "subgroup": {
                "title": "Subgroup",
                "type": "string",
                "pattern": "^.*$",
                "minLength": 0,
                "maxLength": 16
              },
              "comment": {
                "title": "Comment",
                "type": "string",
                "pattern": "^.*$",
                "minLength": 0,
                "maxLength": 64
              },
              "imageurl": {
                "title": "Image Name/URL",
                "type": "string",
                "pattern": "^.*$",
                "minLength": 0,
                "maxLength": 400
              }
            },
            "additionalProperties": false
          },
          "description": "Add device serialno & meta data. Images can be URLs or refer to object names of images uploaded to the server folder (.png, .jpg, .svg). Meta data is used in the left menu, search bar and in the device folder header"
        },
        "other": {
          "title": " ",
          "type": "object",
          "properties": {
            "pending": {
              "title": " ",
              "type": "object",
              "properties": {
                "tbd": {}
              }
            }
          }
        }
      }
    },
    "status_dashboard": {
      "title": "Status dashboard",
      "description": "Status dashboard settings",
      "type": "object",
      "properties": {
        "display_log_files": {
          "title": "Log file meta data in status dashboard",
          "description": "Toggle whether to load log file data in the status dashboard. For buckets with a very large number of log files, this can take a long time and you may want to disable this part of the dashboard functionality.",
          "type": "integer",
          "default": 1,
          "anyOf": [
            {
              "type": "integer",
              "title": "Disable loading of log files",
              "enum": [
                0
              ]
            },
            {
              "type": "integer",
              "title": "Enable loading of log files",
              "enum": [
                1
              ]
            }
          ]
        },
        "devices_log_files": {
          "title": "Specify devices to show log file data for",
          "description": "Enter the device serial numbers that you wish to load log file data for (if enabled). This can be useful if you have a large number of devices as loading everything can take time. Example: '11F23D78 AA2F3892'. If left blank, all devices are extracted.",
          "type": "string",
          "pattern": "^([A-Za-z0-9]{8}( ?))+$"
        },
        "devices_device_info": {
          "title": "Specify devices to show device info for",
          "description": "Enter the device serial numbers that you wish to load device info for (e.g. heartbeat or FW/config status). Example: '11F23D78 AA2F3892'. If left blank, all devices are extracted.",
          "type": "string",
          "pattern": "^([A-Za-z0-9]{8}( ?))+$"
        }
      }
    }
  }
}